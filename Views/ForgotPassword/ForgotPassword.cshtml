@model SanTech.Models.ForgotPassword
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/nullStyle.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/forgotPassword.css">
    <link href="~/css/validation.css" rel="stylesheet" />
    <title>Сброс пароля</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="header__content">
                <a href="../Home/Index">
                    <div class="header__logo"><img src="~/img/logo.png" alt=""></div>
                </a>
            </div>
        </div>
        <div class="content">
            <div class="text2">Забыли пароль?</div>
            <form asp-controller="ForgotPassword" asp-action="ForgotPassword" method="post" class="form-horizontal" onsubmit="return submitUserForm();"> 
                <br />
                <div class="text1">Введите email.</div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="email" asp-for="Email" class="text1 form__control" placeholder="example@gmail.com" />
                        <p><span asp-validation-for="Email" class="text-danger"></span></p>
                    </div>
                </div>
                <div class="g-recaptcha" style="margin: 10px 0 0 0;" data-sitekey="6LeQROEfAAAAAANcgXn0oQRg7k7iNIBOOs-gSiIA" data-callback="verifyCaptcha"></div>
                <div id="g-recaptcha-error"></div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="button1 text1 submit__button" style="@ViewBag.DisabledButton">Отправить</button>
                    </div>
                </div>
            </form>
            <script src='https://www.google.com/recaptcha/api.js'></script>
            <script>
                var recaptcha_response = '';
                function submitUserForm() {
                    if (recaptcha_response.length == 0) {
                        document.getElementById('g-recaptcha-error').innerHTML = '<span class="text1 field-validation-error">Это обязательное поле</span>';
                        return false;
                    }
                    return true;
                }

                function verifyCaptcha(token) {
                    recaptcha_response = token;
                    document.getElementById('g-recaptcha-error').innerHTML = '';
                }
            </script>
        </div>
    </div>
    <script src="~/js/jquery/jquery-3.6.0.min.js"></script>
</body>
</html>